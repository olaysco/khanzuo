{
  "name": "khanzuo-shell",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:frontend\" \"npm:dev:electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build"
  },
  "dependencies": {
    "electron": "^31.0.0",
    "playwright": "^1.45.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.0.1"
  }
}
